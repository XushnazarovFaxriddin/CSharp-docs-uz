<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_margin="0dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:animateLayoutChanges="false"
        android:orientation="vertical"
        android:scrollbars="vertical"
        android:background="@color/colorBackground"
        android:layout_height="match_parent">
        <RelativeLayout
            xmlns:cardview="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical"
            android:layout_margin="0dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:scrollbarAlwaysDrawVerticalTrack="true">


            <androidx.cardview.widget.CardView
                android:id="@+id/card_about_founder"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                cardview:cardCornerRadius="10dp"
                cardview:cardElevation="1dp"
                android:background="#FFFFFF">
                <View
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    cardview:cardCornerRadius="8dp"
                    android:background="@drawable/faxriddin_about"/>
                <View
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center_vertical|right"
                    android:background="@drawable/icon_next"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:textColor="@color/colorText"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:layout_marginTop="15dp"
                    android:text="Faxriddin Xushnazarov"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:textSize="17dp"
                    android:layout_marginLeft="80dp"
                    android:text="Founder &amp; .NET Developer"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                cardview:cardCornerRadius="10dp"
                cardview:cardElevation="1dp"
                android:background="#FFFFFF"
                android:id="@+id/card_about_ui">
                <View
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    cardview:cardCornerRadius="8dp"
                    android:background="@drawable/ui_designer_icon"/>
                <View
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center_vertical|right"
                    android:background="@drawable/icon_next"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:textColor="@color/colorText"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:layout_marginTop="15dp"
                    android:text="SardorBek Sattorov"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:textSize="17dp"
                    android:layout_marginLeft="80dp"
                    android:text="UI Designer &amp; Founder"/>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="190dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                cardview:cardCornerRadius="10dp"
                cardview:cardElevation="1dp"
                android:background="#FFFFFF"
                android:id="@+id/card_about_dotnet">
                <View
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    cardview:cardCornerRadius="8dp"
                    android:background="@drawable/dotnetuz"/>
                <View
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center_vertical|right"
                    android:background="@drawable/icon_next"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:textColor="@color/colorText"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:layout_marginTop="15dp"
                    android:text=".NET Uzbekistan Community"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:textSize="17dp"
                    android:layout_marginLeft="80dp"
                    android:text="dot-net.uz"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_marginTop="280dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:textSize="16dp"
                android:textStyle="bold"
                android:text="Social Media"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="310dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                cardview:cardCornerRadius="10dp"
                cardview:cardElevation="1dp"
                android:background="#FFFFFF"
                
                android:id="@+id/card_about_telegram">
                <View
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    cardview:cardCornerRadius="8dp"
                    android:background="@drawable/icon_telegram"/>
                <View
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center_vertical|right"
                    android:background="@drawable/icon_next"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:textColor="@color/colorText"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:layout_marginTop="15dp"
                    android:text="Telegram"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:textSize="17dp"
                    android:layout_marginLeft="80dp"
                    android:text="&#64;upper.uz"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="400dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                cardview:cardCornerRadius="10dp"
                cardview:cardElevation="1dp"
                android:background="#FFFFFF"
                android:id="@+id/card_about_instagram">
                <View
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    cardview:cardCornerRadius="8dp"
                    android:background="@drawable/icon_instagram"/>
                <View
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center_vertical|right"
                    android:background="@drawable/icon_next"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:textColor="@color/colorText"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:layout_marginTop="15dp"
                    android:text="Instagram"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:textSize="17dp"
                    android:layout_marginLeft="80dp"
                    android:text="&#64;upper.uz"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="490dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                cardview:cardCornerRadius="10dp"
                cardview:cardElevation="1dp"
                android:background="#FFFFFF"
                android:id="@+id/card_about_github">
                <View
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    cardview:cardCornerRadius="8dp"
                    android:background="@drawable/icon_github"/>
                <View
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center_vertical|right"
                    android:background="@drawable/icon_next"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:textColor="@color/colorText"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:layout_marginTop="15dp"
                    android:text="Github"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:textSize="17dp"
                    android:layout_marginLeft="80dp"
                    android:text="&#64;upper.uz"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="580dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                cardview:cardCornerRadius="10dp"
                cardview:cardElevation="1dp"
                android:background="#FFFFFF"
                android:id="@+id/card_about_web">
                <View
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    cardview:cardCornerRadius="8dp"
                    android:background="@drawable/icon_website"/>
                <View
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center_vertical|right"
                    android:background="@drawable/icon_next"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:textColor="@color/colorText"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:layout_marginTop="15dp"
                    android:text="Websote"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:textSize="17dp"
                    android:layout_marginLeft="80dp"
                    android:text="upper.uz"/>
            </androidx.cardview.widget.CardView>


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
